@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center mt-4 mb-0">@ViewData["Title"]</h3>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <p class="mb-3">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                    <p class="mb-3">
                        <strong class="text-danger">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                    </p>
                    <div class="d-flex gap-3">
                        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="flex-fill">
                            <button class="btn btn-primary w-100" type="submit">Download</button>
                        </form>
                        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Custom Styles for Personal Data Page */
    body {
        background-color: #f8f9fa;
    }

    .card {
        background-color: #ffffff;
        border-radius: 15px;
        border: none;
    }

    .btn-primary, .btn-danger {
        border-radius: 30px;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #2575fc;
    }

    .btn-danger:hover {
        background-color: #d9534f;
    }

    /* Adjust heading spacing */
    h3.text-center {
        font-size: 1.5rem;
        color: #343a40;
        margin: auto;
    }
</style>

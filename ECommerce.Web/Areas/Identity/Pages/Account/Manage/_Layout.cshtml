@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<link rel="stylesheet" href="~/css/SiteLayout.css" asp-append-version="true" />

<!-- Custom styles -->
<style>
    body {
        background-color: #f5f7fa; /* Light background */
        font-family: 'Arial', sans-serif; /* Clean, professional font */
    }

    .container {
       
        border-radius: 10px;
        
    }

    h1 {
        
        font-weight: bold;
        margin-bottom: 20px;
    }

    h2 {
        color: #555; /* Slightly lighter color for subheadings */
        font-weight: 500;
    }


</style>

<!-- Page Container -->
<div class="container">
    <h1>Manage your account</h1>

    <div>
        <h2>Change your account settings</h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <!-- Manage Navigation Partial -->
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                <!-- Main Content -->
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}


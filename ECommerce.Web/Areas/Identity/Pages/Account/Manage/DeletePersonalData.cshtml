@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center mt-4">@ViewData["Title"]</h3>

<div class="alert alert-warning text-center" role="alert">
    <p>
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
    <p>Please confirm your password below to proceed with the deletion.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-danger">
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }

                <button class="btn btn-danger btn-lg w-100 mt-3" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Custom Styles for Delete Personal Data Page */
    body {
        background-color: #f8f9fa;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffecb5;
        color: #856404;
        font-size: 1.1rem;
    }

    .card {
        background-color: #ffffff;
        border-radius: 15px;
        border: 2px solid #dc3545;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        border-radius: 30px;
        transition: background-color 0.3s;
    }

    .btn-danger:hover {
        background-color: #b02a37;
    }
</style>
